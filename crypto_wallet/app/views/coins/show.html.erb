<p id="notice"><%= notice %></p>

<p>
  <strong>Description:</strong>
  <%= @coin.description %>
</p>

<p>
  <strong>Acronym:</strong>
  <%= @coin.acronym %>
</p>

<%= content_tag :p do -%>
  <strong>Image:</strong>
  <%= image_tag @coin.url_image, size: "25x25" %>
<% end if @coin.url_image? -%>

<%= content_tag :p do -%>
  <strong>Mining type:</strong>
  <%= @coin.mining_type.description %>
<% end if @coin.mining_type_id? -%>

<%= link_to 'Edit', edit_coin_path(@coin) %> |
<%= link_to 'Back', coins_path %>
