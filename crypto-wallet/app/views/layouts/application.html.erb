<!DOCTYPE html>
<html>
  <head>
    <title>CryptoWallet</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>
  <ul class="nav justify-content-end">
    <li class="nav-item">
      <%= link_to 'HOME', root_path(:locale => params[:locale]), class:"nav-link" %>
    </li>
    <li class="nav-item">
      <%= link_to t('application_lang.portuguese_link'), url_for(:locale => "pt-BR"), class:"nav-link" %>
    </li>
    <li class="nav-item">
      <%= link_to t('application_lang.english_link'), url_for(:locale => "en"), class:"nav-link" %>
    </li>
  </ul>
  <div class="container-fluid">
    <%= yield %>
  </div>
  </body>
</html>
